        {% image "/assets/img/custom-klunker.jpg", "Modern steel klunker mountain bike", "(min-width: 1620px) 464px, (min-width: 1300px) calc(21vw + 128px), (min-width: 880px) calc(50vw - 36px), calc(100vw - 48px)" %}
        {% image "/assets/img/custom-collin-bikepacker.jpg", "Steel bikepacking bike with custom lavender paint scheme", "(min-width: 1620px) 464px, (min-width: 1300px) calc(21vw + 128px), (min-width: 880px) calc(50vw - 36px), calc(100vw - 48px)" %}
        {% image "/assets/img/custom-seat-cluster.jpg", "Steel seat cluster in bright red", "(min-width: 1620px) 464px, (min-width: 1300px) calc(21vw + 128px), (min-width: 880px) calc(50vw - 36px), calc(100vw - 48px)" %}
