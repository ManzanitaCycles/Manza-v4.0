        {% image "/assets/img/custom-steel-gravel.jpg", "Baby blue steel gravel bike with steel fork", "(min-width: 1620px) 464px, (min-width: 1300px) calc(21vw + 128px), (min-width: 880px) calc(50vw - 36px), calc(100vw - 48px)" %}
        {% image "/assets/img/custom-battleBorn.jpg", "Manzanita Battle Born graphic on down tube", "(min-width: 1620px) 464px, (min-width: 1300px) calc(21vw + 128px), (min-width: 880px) calc(50vw - 36px), calc(100vw - 48px)" %}
        {% image "/assets/img/custom-robb-gravel.jpg", "Custom steel gravel bike with clearance for XC race tires", "(min-width: 1620px) 464px, (min-width: 1300px) calc(21vw + 128px), (min-width: 880px) calc(50vw - 36px), calc(100vw - 48px)" %}
        {% image "/assets/img/custom-ultralight-hardtail.jpg", "internal routing port", "(min-width: 1620px) 464px, (min-width: 1300px) calc(21vw + 128px), (min-width: 880px) calc(50vw - 36px), calc(100vw - 48px)" %}
        {% image "/assets/img/custom-rando.jpg", "Custom steel randonneuring bike", "(min-width: 1620px) 464px, (min-width: 1300px) calc(21vw + 128px), (min-width: 880px) calc(50vw - 36px), calc(100vw - 48px)" %}
